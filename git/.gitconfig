[commit]
gpgsign = true

[includeIf "gitdir:~/.dotfiles/"]
path = .gitconfig-personal
[includeIf "gitdir:~/.dotfiles-private/"]
path = .gitconfig-personal
[includeIf "gitdir:~/dev/personal/**"]
path = .gitconfig-personal
[includeIf "gitdir:~/dev/public/**"]
path = .gitconfig-personal


[includeIf "gitdir:~/dev/work/**"]
path = .gitconfig-work

[alias]
all = add -A
st = status
c = commit
s = status
a = add
d = diff

[difftool]
prompt = false

[grep]
extendRegexp = true
lineNumber = true

[push]
default = current

[pull]
rebase = false

[color]
filemode = false
diff = auto
status = auto
branch = auto
pager = true

[core]
editor = vim
excludesfile = ~/.gitignore
compression = -1
autocrlf = input
whitespace = trailing-space,space-before-tab
precomposeunicode = true
